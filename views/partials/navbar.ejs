<nav class="navbar">
  <div class="container">
    <div class="nav-content">
      <div class="nav-left">
        <a href="/" class="logo">Ylsoo</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/blog">Blog</a>
          <a href="/labs">Labs</a>
          <a href="/sustainability">Sustainability</a>
          <a href="/trust">Trust</a>
