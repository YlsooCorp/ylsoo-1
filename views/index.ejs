                                      <!-- Cookie Consent Banner -->
                                      <div id="cookie-banner" class="cookie-banner hidden">
                                        <div class="cookie-content">
                                          <h4>üç™ We value your privacy</h4>
                                          <p>We use cookies to improve your experience. You can accept all cookies, decline non-essential ones, or customize your preferences.</p>
                                          <div class="cookie-buttons">
                                            <button id="accept-all" class="btn-primary">Accept all</button>
                                            <button id="decline-all" class="btn-secondary">Decline</button>
                                            <button id="customize" class="btn-text">Customize</button>
                                          </div>
                                        </div>

                                        <div id="cookie-modal" class="cookie-modal hidden">
                                          <div class="cookie-modal-content">
                                            <h3>Cookie Preferences</h3>
                                            <p>Select which types of cookies you want to allow:</p>
                                            <form id="cookie-preferences">
                                              <label><input type="checkbox" id="essential" checked disabled> Essential (required)</label><br>
                                              <label><input type="checkbox" id="functional"> Functional</label><br>
                                              <label><input type="checkbox" id="analytics"> Analytics</label><br>
                                            </form>
                                            <div class="cookie-buttons" style="margin-top: 16px;">
                                              <button id="save-preferences" class="btn-primary">Save preferences</button>
                                              <button id="cancel-preferences" class="btn-secondary">Cancel</button>
                                            </div>
                                          </div>
                                        </div>
                                      </div>

                                      <script>
                                        async function logout() {
                                          const response = await fetch('/api/logout', { method: 'POST' });
                                          const data = await response.json();
                                          if (data.success) {
                                            window.location.href = data.redirect;
                                          }
                                        }

                                        // --- Cookie Banner Logic ---
                                        const banner = document.getElementById('cookie-banner');
                                        const modal = document.getElementById('cookie-modal');

                                        const acceptAllBtn = document.getElementById('accept-all');
                                        const declineAllBtn = document.getElementById('decline-all');
                                        const customizeBtn = document.getElementById('customize');
                                        const savePreferencesBtn = document.getElementById('save-preferences');
                                        const cancelPreferencesBtn = document.getElementById('cancel-preferences');

                                        const essential = document.getElementById('essential');
                                        const functional = document.getElementById('functional');
                                        const analytics = document.getElementById('analytics');

                                        const consent = JSON.parse(localStorage.getItem('ylsoo_cookie_consent'));
                                        if (!consent) banner.classList.remove('hidden');

                                        acceptAllBtn.addEventListener('click', () => {
                                          localStorage.setItem('ylsoo_cookie_consent', JSON.stringify({
                                            essential: true,
                                            functional: true,
                                            analytics: true
                                          }));
                                          banner.classList.add('hidden');
                                        });

                                        declineAllBtn.addEventListener('click', () => {
                                          localStorage.setItem('ylsoo_cookie_consent', JSON.stringify({
                                            essential: true,
                                            functional: false,
                                            analytics: false
                                          }));
                                          banner.classList.add('hidden');
                                        });

                                        customizeBtn.addEventListener('click', () => modal.classList.remove('hidden'));
                                        cancelPreferencesBtn.addEventListener('click', () => modal.classList.add('hidden'));
                                        savePreferencesBtn.addEventListener('click', () => {
                                          localStorage.setItem('ylsoo_cookie_consent', JSON.stringify({
                                            essential: true,
                                            functional: functional.checked,
                                            analytics: analytics.checked
                                          }));
                                          modal.classList.add('hidden');
                                          banner.classList.add('hidden');
                                        });
                                      </script>
